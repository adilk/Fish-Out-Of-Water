<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fitnessapps.foow.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="6" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        android:icon="@drawable/ic_goldie"
        android:label="@string/app_name" >
        <activity
            android:name=".StartGameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".LevelOneActivity" android:configChanges="orientation" android:screenOrientation="nosensor" />
         <activity android:name=".LevelTwoActivity" android:configChanges="orientation" android:screenOrientation="nosensor" />
         <activity android:name=".LevelThreeActivity" android:configChanges="orientation" android:screenOrientation="nosensor" />
         <activity android:name=".LevelFourActivity" android:configChanges="orientation" android:screenOrientation="nosensor" />
         <activity android:name=".GameCompletedActivity" android:configChanges="orientation" android:screenOrientation="nosensor" />
    </application>

</manifest>